                                <Image url="@icons/volumeHigh.png" />
                            </image>
                        </ImageView>
                        <ImageView fx:id="timeImage" fitHeight="30.0" fitWidth="30.0" layoutX="188.0" layoutY="205.0" pickOnBounds="true" preserveRatio="true">
