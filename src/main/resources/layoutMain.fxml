                                <ImageView fx:id="playPauseImage" fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@icons/play.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="nextButton" layoutX="239.0" layoutY="28.0" mnemonicParsing="false" onAction="#nextButtonClick" prefHeight="30.0" prefWidth="50.0" styleClass="controlButton">
                            <graphic>
                                <ImageView fx:id="nextImage" fitHeight="22.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@icons/next.png" />
                                    </image>
                                </ImageView>
