                                <Image url="@icons/time.png" />
                            </image>
                        </ImageView>
                        <Label fx:id="labelSpeed" layoutX="90.0" layoutY="115.0" text="Speed" />
                        <Button fx:id="speedButton" layoutX="38.0" layoutY="111.0" mnemonicParsing="false" onAction="#speedButtonClick" prefHeight="30.0" prefWidth="50.0" styleClass="additionalButton" text="x1" />
                        <Button fx:id="minimalizeButton" layoutX="239.0" layoutY="111.0" mnemonicParsing="false" onAction="#minimalizeButtonClick" prefHeight="30.0" prefWidth="50.0" styleClass="additionalButton">
                            <graphic>
                                <ImageView fitHeight="22.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@icons/minimalize.png" />
                                    </image>
                                </ImageView>
                            </graphic>
